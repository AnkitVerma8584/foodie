<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txtEnterMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mobile number"
        android:textColor="#888888"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="65dp"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/etMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@id/txtEnterMobile"
        android:background="@drawable/stroke_box"
        android:textSize="20sp"
        android:maxLength="10"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:layout_marginLeft="28dp"
        android:drawableLeft="@drawable/ic_mobile"
        android:hint="  Mobile Number(10 digit)"/>


    <TextView
        android:id="@+id/txtEnterUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new userId"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/etMobileNumber"
        android:textColor="#888888"
        android:textSize="18sp"
        android:layout_marginLeft="65dp"/>
    <EditText
        android:id="@+id/etUserId"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="New UserId"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:background="@drawable/stroke_box"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_profile"
        android:padding="10dp"
        android:layout_below="@+id/txtEnterUserId"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txtEnterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new password"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/etUserId"
        android:textColor="#888888"
        android:textSize="18sp"
        android:layout_marginLeft="65dp"/>


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:inputType="textPassword"
        android:background="@drawable/stroke_box"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_password"
        android:padding="10dp"
        android:layout_below="@+id/txtEnterPassword"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txtConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm password"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/etPassword"
        android:textColor="#888888"
        android:textSize="18sp"
        android:layout_marginLeft="65dp"/>
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:inputType="textPassword"
        android:background="@drawable/stroke_box"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_password"
        android:padding="10dp"
        android:layout_below="@+id/txtConfirmPassword"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Update"
        android:layout_below="@+id/etConfirmPassword"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_marginTop="35dp"/>

</RelativeLayout>